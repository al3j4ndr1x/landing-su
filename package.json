{
  "name": "landing-su",
  "jest": {
    "verbose": true,
    "collectCoverage": false,
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": -10
      }
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "output": "./test-results/junit/jest-junit.xml"
  },
  "version": "0.1.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --aot=true",
    "start:staging": "ng serve --aot=true --configuration=staging",
    "build": "ng build",
    "build:staging": "ng build --configuration=staging --aot=true",
    "build:stagelocal": "ng build --env=staging",
    "build:prod": "ng build --prod",
    "lint": "ng lint",
    "cy:verify": "cypress verify",
    "cy:version": "cypress version",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "e2e": "cypress run",
    "cy:chrome": "cypress run --browser chrome",
    "cy:record": "cypress run --record --group all-tests",
    "cy:record:parallel": "cypress run --record --parallel --group all-tests",
    "e2e:ci": "start-server-and-test start http://localhost:4200 cy:record",
    "e2e:ci:staging": "start-server-and-test start:staging http://localhost:4200 cy:record",
    "test": "ng test --runInBand --bail --colors",
    "test:prepush": "ng test --runInBand --bail --colors --coverage",
    "test:watch": "ng test --watch",
    "test:cov": "ng test --ci --runInBand --bail --colors --coverage --reporters=default && coveralls < coverage/lcov.info",
    "test:report": "ng test --ci --runInBand --reporters=default --reporters=jest-junit",
    "test:summary": "ng test --ci --runInBand",
    "test:exper": "ng test --ci --runInBand --collectCoverage --bail --colors --reporters=default && coveralls < coverage/lcov.info",
    "test:coveralls": "ng test --ci --runInBand --bail --colors --collectCoverage --reporters=default --coverageReporters=text-lcov | coveralls"
  },
  "author": "al3j4ndr1x",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.2.2",
    "@angular/cdk": "^8.1.2",
    "@angular/common": "^8.2.2",
    "@angular/compiler": "^8.2.2",
    "@angular/core": "^8.2.2",
    "@angular/fire": "^5.2.1",
    "@angular/forms": "^8.2.2",
    "@angular/platform-browser": "^8.2.2",
    "@angular/platform-browser-dynamic": "^8.2.2",
    "@angular/pwa": "^0.802.1",
    "@angular/router": "^8.2.2",
    "@angular/service-worker": "^8.2.2",
    "@nebular/auth": "^4.1.3",
    "@nebular/eva-icons": "^4.1.3",
    "@nebular/theme": "^4.1.3",
    "eva-icons": "^1.1.1",
    "firebase": "^6.3.5",
    "lodash": "^4.17.15",
    "rxjs": "^6.5.2",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-builders/jest": "^8.0.4",
    "@angular-devkit/build-angular": "^0.802.1",
    "@angular/cli": "^8.2.1",
    "@angular/compiler-cli": "^8.2.2",
    "@angular/language-service": "^8.2.2",
    "@bahmutov/add-typescript-to-cypress": "^2.1.2",
    "@cypress/webpack-preprocessor": "^4.1.0",
    "@types/chance": "^1.0.5",
    "@types/dotenv": "^6.1.1",
    "@types/jasmine": "~3.4.0",
    "@types/jasminewd2": "~2.0.6",
    "@types/jest": "^24.0.17",
    "@types/node": "~12.7.1",
    "chance": "^1.0.18",
    "codelyzer": "^5.1.0",
    "coveralls": "^3.0.6",
    "cypress": "^3.4.1",
    "dotenv": "^8.0.0",
    "firebase-tools": "^7.2.2",
    "husky": "^3.0.3",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^24.8.0",
    "jest-junit": "^7.0.0",
    "protractor": "~5.4.2",
    "start-server-and-test": "^1.10.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "ts-node": "~8.3.0",
    "tslint": "~5.18.0",
    "typescript": "^3.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm run test:prepush"
    }
  }
}
